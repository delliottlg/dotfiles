{
  "_comment": "Safe non-destructive commands for Claude Code VS Code extension auto-approval",
  "_usage": "Copy relevant sections to VS Code settings.json or symlink",
  "_docs": "https://docs.anthropic.com/claude-code/settings",

  "claude-code.autoApprove": {
    "read": true,
    "edit": true
  },

  "claude-code.allowedCommands": [
    "ls *",
    "pwd",
    "cd *",
    "cat *",
    "head *",
    "tail *",
    "less *",
    "more *",
    "wc *",
    "grep *",
    "rg *",
    "find *",
    "which *",
    "whereis *",
    "type *",
    "file *",
    "stat *",
    "tree *",
    "echo *",
    "printf *",
    "date",
    "whoami",
    "hostname",
    "uname *",
    "env",
    "printenv *",

    "git status *",
    "git log *",
    "git diff *",
    "git branch *",
    "git show *",
    "git blame *",
    "git remote -v",
    "git config --list",
    "git rev-parse *",
    "git ls-files *",
    "git stash list",
    "git fetch *",

    "node --version",
    "npm list *",
    "npm outdated *",
    "npm view *",
    "npm search *",
    "npx --version",
    "python --version",
    "python3 --version",
    "pip list *",
    "pip show *",
    "pip3 list *",
    "pip3 show *",
    "uv --version",
    "uv pip list *",
    "uv pip show *",

    "cargo --version",
    "cargo tree *",
    "rustc --version",
    "go version",
    "go list *",
    "java --version",
    "javac --version",
    "dotnet --version",
    "dotnet --list-sdks",

    "docker ps *",
    "docker images *",
    "docker logs *",
    "docker inspect *",
    "docker version",
    "kubectl get *",
    "kubectl describe *",
    "kubectl logs *",
    "kubectl version *",

    "gh --version",
    "gh repo view *",
    "gh repo list *",
    "gh pr list *",
    "gh pr view *",
    "gh pr status *",
    "gh issue list *",
    "gh issue view *",
    "gh api *",

    "curl --version",
    "wget --version",
    "jq *",
    "yq *",
    "diff *",
    "cmp *",
    "sort *",
    "uniq *",
    "cut *",
    "awk *",
    "sed -n *",
    "tr *",
    "basename *",
    "dirname *",
    "realpath *",
    "readlink *",

    "du -sh *",
    "df -h *",
    "free *",
    "uptime",
    "ps *",
    "top -bn1",
    "lsof *",
    "netstat *",
    "ss *",
    "ping -c *",
    "nslookup *",
    "dig *",
    "host *",
    "traceroute *",

    "fish --version",
    "zsh --version",
    "bash --version",
    "code --version",
    "nvim --version",
    "vim --version",
    "man *",
    "help *",
    "history",
    "alias",
    "set",

    "adb devices",
    "adb shell getprop *",
    "adb version",
    "scrcpy --version"
  ]
}
